@model IEnumerable<ChildCareSystem.ViewModels.AccountWithRoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="loader">
    <img src="~/images/loading.gif" alt="Loading..." />
</div>

<div class="wrapper px-3 py-5">
    <div class="section-title">
        <h2>Accounts</h2>
    </div>

    <div class="table-wrapper">
        <table class="table table-striped table-bordered mydatatable">
            <thead>
                <tr>
                    <th>
                        Email
                    </th>
                    <th>
                        Full name
                    </th>
                    <th>
                        Phone number
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        Role
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @item.FullName
                        </td>
                        <td>
                            @item.PhoneNumber
                        </td>
                        <td>
                            @item.Address
                        </td>
                        <td>
                            @item.RoleName
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <link href="@Url.Content("~/css/common/loading.css")" rel="stylesheet" type="text/css" />
    <style>
        .wrapper {
            display: flex;
            flex-direction: column;
            /*width: 90vw;*/
            justify-content: center;
            align-items: center;
            margin: 0 auto;
        }

        .table-wrapper {
            width: 80vw;
        }

        .section-title {
            text-align: center;
            padding-bottom: 20px;
        }

            .section-title h2 {
                font-size: 28px;
                font-weight: bold;
                text-transform: uppercase;
                padding-bottom: 20px;
                position: relative;
            }

                .section-title h2::after {
                    content: "";
                    position: absolute;
                    display: block;
                    width: 50px;
                    height: 3px;
                    background: #0275d8;
                    bottom: 0;
                    left: calc(50% - 25px);
                }
    </style>
}

@section Scripts {
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/loading.js"></script>    
    <script>
        $(".mydatatable").DataTable();
    </script>
}