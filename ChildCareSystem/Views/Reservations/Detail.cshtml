@model ChildCareSystem.Models.Reservation

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper px-5">
    <div class="form-wrapper col-12 col-lg-8 mt-3 py-3">
        <div class="customer-section col-12">
            <div class="row">
                <div class="col mb-3">
                    <h5>Patient information</h5>
                    <div><span class="text-secondary">Name:</span> @Model.Patient.PatientName</div>
                    <div><span class="text-secondary">Birthdate:</span> @Model.Patient.Birthdate.ToString("dd-MM-yyyy")</div>
                    <div>
                        <span class="text-secondary">Gender:</span>
                        @if (Model.Patient.Gender)
                        {
                            <span style="font-weight: 400">Male</span>
                        }
                        else
                        {
                            <span style="font-weight: 400">Female</span>
                        }
                    </div>
                </div>
                <div class="col mb-3">
                    <h5>Customer information</h5>
                    <div><span class="text-secondary">Name:</span> @Model.ChildCareSystemUser.FullName</div>
                    <div><span class="text-secondary">Email:</span> @Model.ChildCareSystemUser.Email</div>
                    <div><span class="text-secondary">Phone number:</span> @Model.ChildCareSystemUser.PhoneNumber</div>
                    <div><span class="text-secondary">Address:</span> @Model.ChildCareSystemUser.Address</div>
                </div>
            </div>
        </div>
        <hr />

        <div class="service-section col-12">
            <div class="row">
                <div class="col mb-3">
                    <h5>Service information</h5>
                    <div><span class="text-secondary">Service name:</span> @Model.Service.ServiceName</div>
                    <div><span class="text-secondary">Date:</span> @Model.CheckInDate</div>
                    <div><span class="text-secondary">Price:</span> $@Model.Price</div>
                </div>
                <div class="col mb-3">
                    <h5>Doctor information</h5>
                    <div><span class="text-secondary">Doctor name:</span> @Model.ChildCareSystemStaff.FullName</div>
                    <div><span class="text-secondary">Email:</span> @Model.ChildCareSystemStaff.Email</div>
                </div>
            </div>
        </div>
        <hr />

        <div class="feedback-section col-12">
            <div class="row">
                <div class="col"><h5>Feedback</h5></div>
            </div>
            <div class="row">
                <div class="col">
                    <span class="text-secondary">Rate:</span>
                    @if (ViewBag.Feedback != null)
                    {
                        <span style="font-weight: 400">@ViewBag.Feedback.Rate</span>
                    }
                    else
                    {
                        <span style="font-weight: 400">(Not have information yet)</span>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <span class="text-secondary">Comment:</span>
                    @if (ViewBag.Feedback != null)
                    {
                        <span style="font-weight: 400">@ViewBag.Feedback.Comment</span>
                    }
                    else
                    {
                        <span style="font-weight: 400">(Not have information yet)</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="@Url.Content("~/css/reservation/detail.css")" rel="stylesheet" type="text/css" />
}

