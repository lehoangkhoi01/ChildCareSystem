@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="content mt-5">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6">
                <img src="~/images/login.png" alt="Image" class="img-fluid">
            </div>
            <div class="col-12 col-md-6 px-5">
                <div class="row justify-content-center">
                    <div class=" col-8 col-md-12">
                        <div class="mb-4">
                            <h3 class="text-center">Login</h3>
                        </div>
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input asp-for="Input.Email" class="form-control" id="email" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <div class="d-flex mb-4 align-items-center">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                                    Sign-up
                                </a>
                                <span class="ml-auto"><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></span>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary col-md-6">Log in</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }
    </script>
}
